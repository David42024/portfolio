{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "clean": {
      "cache": false
    },
    "db:migrate": { "cache": false },
    "db:migrate:prod": { "cache": false },
    "db:generate": { "cache": false },
    "db:studio": { "cache": false, "persistent": true },
    "db:reset": { "cache": false },
    "db:seed": { "cache": false },
    "db:push": { "cache": false }
  }
}
